<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--tomact启动后,立即加载该页面-->
    <welcome-file-list>
        <welcome-file>/login.html</welcome-file>
    </welcome-file-list>

    <!--配置Servlet类名对应类路径-->
    <servlet>
        <servlet-name>MyServlet01</servlet-name>
        <servlet-class>servlet.MyServlet01</servlet-class>
    </servlet>

    <!--配置Servlet类名对应请求路径-->
    <servlet-mapping>
        <servlet-name>MyServlet01</servlet-name>
        <url-pattern>/myServlet01</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyServlet02</servlet-name>
        <servlet-class>servlet.MyServlet02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet02</servlet-name>
        <url-pattern>/myServlet02</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyServlet03</servlet-name>
        <servlet-class>servlet.MyServlet03</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet03</servlet-name>
        <url-pattern>/myServlet03</url-pattern>
    </servlet-mapping>

    <!--配置过滤器类名对应类路径-->
    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>filter.MyFilter</filter-class>
    </filter>

    <!--配置过滤器类名对应需要拦截的请求路径-->
    <filter-mapping>
        <filter-name>MyFilter</filter-name>
        <url-pattern>/demoFilter/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MyFilter2</filter-name>
        <filter-class>filter.MyFilter2</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter2</filter-name>
        <url-pattern>/demoFilter</url-pattern>
    </filter-mapping>
</web-app>